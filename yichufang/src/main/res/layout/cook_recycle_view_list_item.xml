<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="20dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardBackgroundColor="@color/gray_me_line"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_item_cook_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/image_demo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="15dp"
                android:paddingTop="3dp">


                <TextView
                    android:id="@+id/tv_item_cook_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红烧茄子"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_item_cook_material"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红烧茄子"
                    android:textColor="@color/gray_children_text"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_item_cook_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红烧茄子"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>



